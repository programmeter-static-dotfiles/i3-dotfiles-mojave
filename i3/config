exec --no-startup-id xinput set-prop "SteelSeries SteelSeries Rival 3" "libinput Accel Profile Enabled" 0, 1
exec --no-startup-id xinput set-prop "SteelSeries SteelSeries Rival 3" "libinput Accel Speed" -0.55

